<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Складський облік</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <!-- Bootstrap core CSS     -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Animation library for notifications   -->
    <link href="~/assets/css/animate.min.css" rel="stylesheet" />
    <!--  Paper Dashboard core CSS    -->
    <link href="~/assets/css/paper-dashboard.css" rel="stylesheet" />
    <!--  CSS for Demo Purpose, don't include it in your project   -->
    <link href="~/assets/css/demo.css" rel="stylesheet" />

    <!--  Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="~/assets/css/themify-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <div class="wrapper">
        <div class="sidebar" data-background-color="white" data-active-color="danger">

            <!--
                Tip 1: you can change the color of the sidebar's background using: data-background-color="white | black"
                Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
            -->

            <div class="sidebar-wrapper">
                <div class="logo">
                    @*<a href="http://www.creative-tim.com" class="simple-text">*@
                    <h3>Складський облік</h3>
                    @*</a>*@
                </div>
                <ul class="nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li id="liPanel">
                            <a asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="ti-stats-up"></i>
                                <p>Статистика</p>
                            </a>
                        </li>
                        <li id="liOptions">
                            <a asp-area="" asp-controller="Options" asp-action="Index">
                                <i class="ti-settings"></i>
                                <p>Налаштування</p>
                            </a>
                        </li>
                        <li id="liInvoice">
                            <a asp-area="" asp-controller="Invoice" asp-action="Index">
                                <i class="ti-import"></i>
                                <p>Приход</p>
                            </a>
                        </li>
                        <li id="liSale">
                            <a asp-area="" asp-controller="Sale" asp-action="Index">
                                <i class="ti-export"></i>
                                <p>Продаж</p>
                            </a>
                        </li>
                        <li id="liWarehouse">
                            <a asp-area="" asp-controller="Warehouse" asp-action="Index">
                                <i class="ti-package"></i>
                                <p>Склад</p>
                            </a>
                        </li>
                        <li id="liExit">
                            <a asp-area="" asp-controller="Home" asp-action="Logout">
                                <i class="ti-shift-right"></i>
                                <p>Вихід</p>
                            </a>
                        </li>
                    }
                    else
                    {
                        await Html.RenderPartialAsync("_Login");
                    }
                </ul>
            </div>
        </div>

        <div class="main-panel">
            @if (User.Identity.IsAuthenticated)
            {
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar bar1"></span>
                                <span class="icon-bar bar2"></span>
                                <span class="icon-bar bar3"></span>
                            </button>
                            @*<a class="navbar-brand" href="#">Dashboard</a>*@
                        </div>
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav navbar-right">
                                <li>
                                    <a asp-controller="Home" asp-action="Index">
                                        <i class="ti-stats-up"></i>
                                        <p>Статистика</p>
                                    </a>
                                </li>
                                @*                            <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="ti-bell"></i>
                            <p class="notification">5</p>
                            <p>Notifications</p>
                            <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                            <li><a href="#">Notification 1</a></li>
                            <li><a href="#">Notification 2</a></li>
                            <li><a href="#">Notification 3</a></li>
                            <li><a href="#">Notification 4</a></li>
                            <li><a href="#">Another notification</a></li>
                            </ul>
                            </li>*@
                                <li>
                                    <a asp-controller="Options" asp-action="Index">
                                        <i class="ti-settings"></i>
                                        <p>Налаштування</p>
                                    </a>
                                </li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li>
                                        <a asp-controller="Home" asp-action="Logout">
                                            <i class="ti-shift-right"></i>
                                            <p>Вихід</p>
                                        </a>
                                    </li>
                                }
                            </ul>

                        </div>
                    </div>
                </nav>
            }
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <footer class="footer">
                <div class="container-fluid">
                </div>
            </footer>

        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>

<!--   Core JS Files   -->
<script src="~/assets/js/jquery-1.10.2.js" type="text/javascript"></script>
<script src="~/assets/js/bootstrap.min.js" type="text/javascript"></script>

<!--  Checkbox, Radio & Switch Plugins -->
<script src="~/assets/js/bootstrap-checkbox-radio.js"></script>

<!--  Charts Plugin -->
<script src="~/assets/js/chartist.min.js"></script>

<!--  Notifications Plugin    -->
<script src="~/assets/js/bootstrap-notify.js"></script>

<!--  Google Maps Plugin    -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>

<!-- Paper Dashboard Core javascript and methods for Demo purpose -->
<script src="~/assets/js/paper-dashboard.js"></script>



<!-- Paper Dashboard DEMO methods, don't include it in your project! -->
<script src="~/assets/js/demo.js"></script>

@*Для каталогу (TreeView)*@
<script src="~/js/site.js" asp-append-version="true"></script>

<script type="text/javascript">
    $(document).ready(function () {
    @{
        var controller = @ViewContext.RouteData.Values["controller"];
        string selectLi = "liInvoice";
        switch (controller.ToString().ToLower())
        {
            case "invoice":
                selectLi = "liInvoice";
                break;
            case "sale":
                selectLi = "liSale";
                break;
            case "options":
                selectLi = "liOptions";
                break;
            case "warehouse":
                selectLi = "liWarehouse";
                break;
            default:
                selectLi = "liPanel";
                break;
        }
    };
    });
    document.getElementById('@selectLi').className = "active";

</script>

</html>
