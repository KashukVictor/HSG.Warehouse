                                        <span asp-validation-for="Product.ManufacturerId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <div class="form-group">
                                        <label>Найменування</label>
                                        <input type="text" asp-for="Product.Name" class="form-control border-input" placeholder="Найменування">
                                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <div class="form-group">
                                        <label>Одиниці виміру</label>
                                        <select id="SelectUnitId" asp-for="Product.UnitId"  class="form-control border-input">
                                            @foreach (var unit in Model.Units)
                                            {
                                                <option value=@unit.Id>@unit.Name</option>
                                            }
                                        </select>
                                        <span asp-validation-for="Product.UnitId" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>

                            <div class="row">
